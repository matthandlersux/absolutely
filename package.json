{
  "name": "relative-to-absolute",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "bin": {
    "absolutely": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "prettier": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,json}\"",
    "typecheck:watch": "tsc --noEmit --watch",
    "postinstall": "echo 'Fixing line endings in tsc-alis' && eolConverter ./node_modules/.bin/tsc-alias"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "node-glob": "^1.2.0",
    "ora": "^5.1.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.162",
    "@types/ora": "^3.2.0",
    "@types/yargs": "^15.0.9",
    "eol-converter-cli": "^1.0.8",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "tsc-alias": "^1.1.1",
    "typescript": "^4.0.3"
  }
}
